<form
  action="/"
  method="POST"
  id="inputUrlForm"
  class="row needs-validation was-validated"
  novalidate
>
  <div class="row align-items-center">
    <label for="ori-url">Original URL : </label>
  </div>
  <div class="row mt-2">
    <div class="col-11 "><input
        class="form-control me-auto"
        type="url"
        placeholder="Enter an URL here"
        name="originalURL"
        value="{{ori_url}}"
        id="ori-url"
        required
      />
      <div class="invalid-feedback">Please enter an url.</div></div>
    <div class="col-1 ">
      <button
        type="submit"
        class="btn btn-info"
        id="convert-btn"
      >Convert</button></div>
  </div>
  <div class="hstack gap-3">

  </div>

</form>

{{#if new_url}}
  <label for="new-url">New URL : </label>
  <div class="input-group mb-3">
    <input
      type="text"
      class="form-control"
      value="{{new_url}}"
      id="new-url"
      disabled
    />
    <button
      class="btn btn-outline-info"
      type="button"
      id="copy-btn"
    >Copy</button>
  </div>
  <div
    class="alert alert-success copy-message-hide"
    id="copy-message"
    role="alert"
  >The new URL has been copied to the clipboard.
  </div>
  <div class="card" style="width: 14rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title">QR Code:</h5>
      <img src="{{qrCode}}" alt="" />
    </div>
  </div>

{{/if}}